<h3>Author:<%= @post.author.name %></h3>
<h3>Posts:<%= @post.content %></h3>

<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  Content:<%= comment.body %>
<% end %>

<ul>
    <li><%= link_to "Edit", edit_user_post_path(@user) %></li>
    <li><%= link_to "Destroy", user_post_path(@user), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    } %></li>
</ul>